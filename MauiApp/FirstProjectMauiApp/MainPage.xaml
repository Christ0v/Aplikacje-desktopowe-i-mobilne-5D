<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstProjectMauiApp.MainPage">

    <StackLayout BackgroundColor="DarkCyan">
        <Label x:Name="messageLabel"/>
        <Entry x:Name="messageEntry"
               />
        <Button Text="Kliknij mnie!"
                BackgroundColor="DarkOrange"
                TextColor="DeepSkyBlue"
                Clicked="Button_Clicked"/>
        <CheckBox IsChecked="False"/>
        <RadioButton/>
        <RadioButton/>
        <RadioButton IsChecked="True"/>
        <Slider Minimum="10"
                Maximum="120"
                ValueChanged="Slider_ValueChanged"
                x:Name="ageSlider"/>
        <Label x:Name="ageLabel"/>

        <Label Text="Wybierz: "/>
        <Picker x:Name="fruitPicker"/>
        <Button Text="Sprawdź"
                Clicked="Favorite_Button_Clicked"/>
        <Label x:Name="favoriteFruitLabel"/>
    </StackLayout>
</ContentPage>
